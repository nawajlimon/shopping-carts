<div class="well">
  <div class="row">
    <div class="col-sm-8">
      <h3><%= @product.title %></h3>
    </div>
    <div class="col-sm-4">
      <div class="pull-right">


      <%= simple_form_for @order_item, remote: true do |f| %>
        <%= f.input :product_id, :as => :hidden, :input_html => { :value => @product.id } %>
        <h5><%= @product.price %>â‚¬</h5>

        <div class="form-group">
          <%= f.input :size, collection: @product.sizes %>
        </div>

        <div class="form-group">
          <%= f.input :color ,collection: @product.colors %>
        </div>

        <div class="form-group">
          <%= f.input :quantity, as: :integer, :input_html => { min: 1, value: 1 } %>
        </div>
        <%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
      <% end %>


      </div>
    </div>
    <div class="col-sm-8">
      <% @product.description.split('#').each do |d| %>
        <p><%= d %><br></p>
      <% end %>
    </div>
  </div>
</div>
